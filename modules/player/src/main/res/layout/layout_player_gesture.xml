<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/gesture_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/backgrund_video_view"
        android:visibility="gone">

        <!-- 声音 -->
        <TextView
            android:id="@+id/volume_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@mipmap/ic_volume_on"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:textColor="@color/text_white_immutable"
            android:visibility="gone"
            tools:text="50%" />

        <!-- 亮度 -->
        <TextView
            android:id="@+id/battery_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@mipmap/ic_brightness"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:textColor="@color/text_white_immutable"
            android:visibility="gone"
            tools:text="50%" />

        <!-- 进度 -->
        <TextView
            android:id="@+id/position_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:textColor="@color/text_white_immutable"
            android:visibility="gone"
            tools:text="12:12:/31:01\n+6秒" />
    </FrameLayout>
</layout>