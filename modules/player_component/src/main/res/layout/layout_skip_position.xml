<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/skip_position_ll"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:background="@color/player_item_bg_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/skip_cancel_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="7dp"
            android:src="@drawable/ic_skip_cancel" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/gray_40" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/tips_last_play_position"
            android:textColor="@color/text_white_immutable"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/position_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/text_white_immutable"
            android:textSize="16sp"
            tools:text="31:51" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@color/gray_40" />

        <TextView
            android:id="@+id/skip_confirm_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/action_skip_position"
            android:textColor="@color/text_theme"
            android:textSize="16sp" />

    </LinearLayout>
</layout>